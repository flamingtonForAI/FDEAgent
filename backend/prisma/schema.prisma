// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// === User Management ===
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  passwordHash  String
  emailVerified Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastLoginAt   DateTime?

  projects      Project[]
  preferences   UserPreferences?
  archetypes    ImportedArchetype[]
  refreshTokens RefreshToken[]

  @@index([email])
}

model RefreshToken {
  id        String    @id @default(cuid())
  token     String    @unique
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime  @default(now())
  revokedAt DateTime?

  @@index([token])
  @@index([userId])
}

// === Project Management ===
model Project {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  name     String
  industry String?
  useCase  String?
  status   String @default("scouting")

  // Complex state stored as JSONB
  objects        Json @default("[]") // OntologyObject[]
  links          Json @default("[]") // OntologyLink[]
  integrations   Json @default("[]") // ExternalIntegration[]
  aiRequirements Json @default("[]") // AIRequirement[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  chatMessages ChatMessage[]
  auditLogs    AuditLog[]

  @@index([userId])
  @@index([userId, updatedAt])
  @@index([userId, status])
  @@index([userId, createdAt])
}

// === Chat Messages (Normalized Storage) ===
model ChatMessage {
  id        String  @id @default(cuid())
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  role     String // 'user' | 'assistant'
  content  String @db.Text
  metadata Json? // Attachments and other metadata

  createdAt DateTime @default(now())

  @@index([projectId])
  @@index([projectId, createdAt])
}

// === User Preferences ===
model UserPreferences {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  themeId  String @default("githubDark")
  language String @default("cn")

  // AI settings (excluding API Key - kept local)
  aiProvider    String?
  aiModel       String?
  customBaseUrl String?

  sidebarCollapsed Boolean @default(false)
  defaultTab       String  @default("quickStart")

  updatedAt DateTime @updatedAt
}

// === Imported Archetypes ===
model ImportedArchetype {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  archetypeId String
  archetype   Json
  originType  String // 'reference' | 'ai-generated'
  originData  Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, archetypeId])
  @@index([userId])
}

// === Audit Logs ===
model AuditLog {
  id        String  @id @default(cuid())
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  changeType  String
  entityType  String
  entityId    String
  entityName  String
  parentId    String?
  parentName  String?
  beforeState Json?
  afterState  Json?
  description String
  source      String @default("user")

  createdAt DateTime @default(now())

  @@index([projectId])
  @@index([projectId, createdAt])
}
